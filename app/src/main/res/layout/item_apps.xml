<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/img_bg">

   <RelativeLayout
       android:layout_margin="20dp"

       android:layout_width="match_parent"
       android:layout_height="170dp"
       android:background="@drawable/img_bg2">

       <ImageView
           android:id="@+id/iv_template"
           android:padding="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_width="150dp"
           android:layout_height="150dp"/>

       <TextView
           android:id="@+id/tv_template"
           android:layout_marginRight="10dp"
           android:layout_marginTop="45dp"
           android:layout_width="250dp"
           android:layout_height="35dp"
           android:textAlignment="center"
           android:text="Gmail"
           android:fontFamily="@font/sf_collegiate"
           android:layout_toRightOf="@+id/iv_template"
           android:gravity="center_horizontal"
           android:textSize="37dp"/>

       <Button
           android:id="@+id/btn_template1"
           android:layout_width="75dp"
           android:layout_height="45dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="10dp"
           android:text="SHARE"
           android:textSize="10dp"
           android:layout_toRightOf="@+id/iv_template"
           android:layout_below="@+id/tv_template"/>

       <Button
           android:id="@+id/btn_template2"
           android:layout_width="75dp"
           android:layout_height="45dp"
           android:layout_marginRight="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:text="MORE"
           android:textSize="10dp"
           android:layout_toRightOf="@+id/btn_template1"
           android:layout_below="@+id/tv_template"/>


   </RelativeLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>